{% extends 'base.html.twig' %}

{% block body %}
    <h1>Movies list</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Title Original</th>
                <th>Image</th>
                <th>Description</th>
                <th>Premier date</th>
                <th>Add date</th>
                <th>Viewed</th>
                <th>Status</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in pagination %}
            <tr>
                <td><a href="{{ path('movie_show', { 'id': movie.id }) }}">{{ movie.id }}</a></td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.titleOriginal }}</td>
                <td>{{ movie.image }}</td>
                <td>{{ movie.description }}</td>
                <td>{{ movie.premierDate }}</td>
                <td>{% if movie.addDate %}{{ movie.addDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ movie.viewed }}</td>
                <td>{{ movie.status }}</td>
                <td>{{ movie.rating }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_movie_show', { 'id': movie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('movie_edit', { 'id': movie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('admin_movie_new') }}">Create a new movie</a>
        </li>
    </ul>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
